<div class="post">
  <h3 class="post-title"> <%= link_to post.title, post %> </h3>
  <p class="date-posted"> <%= time_ago_in_words(post.created_at) %> ago</p>
  <p class="post-body"> <%= post.body.truncate_words(150) %> </p>

  <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-warning btn-sm" %>
  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>

  <hr>

</div> <!-- end post -->
