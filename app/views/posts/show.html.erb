<p id="notice"><%= notice %></p>

<div class="show-post col-sm-10 col-sm-offset-1">
  <h3 class="post-title"> <%= @post.title %> </h3>
  <p class="date-posted"> <%= @post.created_at %> </p>
  <p class="post-body"> <%= @post.body %> </p>

  <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-warning btn-sm" %>
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning btn-sm" %>

</div> <!-- end show-post -->
